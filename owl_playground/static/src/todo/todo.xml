<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="owl_playground.Todo" owl="1">
    <div class="form-check">
      <input 
        t-on-click="onInputClick" 
        class="form-check-input" 
        type="checkbox" 
        t-att-id="props.id" 
        t-att-checked="props.done" 
      />
      <label 
        class="form-check-label" 
        t-att-for="props.id" 
        t-att-class="{'text-muted text-decoration-line-through': props.done}"
      >
        <t t-esc="props.description" />
      </label>
      <span 
        class="fa fa-remove ms-3 cursor-pointer"
        t-on-click="onRemoveClick"
      />
    </div>
  </t>

</templates>
